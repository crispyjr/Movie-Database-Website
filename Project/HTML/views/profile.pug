doctype html
head
  title MMDb: My Movie DataBase 
  link(rel='stylesheet' href='../CSS/Account.css')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
body(onload='init()')
.HeaderBar
  .AboveHeaderBar
  a(href='http://localhost:3000')
    img.MMDBimage(src='/html/Images/MMDB1.png')
  .search
    input#search.searchBar(type='text')
    img.searchButton(src='/html/Images/search.png')
  .HeaderBarLine
  .Menu(onclick='MenuOn()')
    p(style='color:cyan; font-size: 41px; position: absolute; top:-44px; left:45px;')  MENU
    p(style='color:red; font-size: 41px; position: absolute; top:-44px; left:46px;')  MENU
    p(style='color:black; font-size: 40px; position: absolute; top:-44px; left:47px')  MENU
    span.MenuBars(style='background-color: cyan;')
    span.MenuBars(style='background-color:red; top:12px;')
    span.MenuBars(style='background-color: cyan; top: 23px;')
  .signIn(onclick="location.replace('http://localhost:3000/login')")
    p.signInText(style='color: white; position: absolute; left:13px') SIGN IN
    p.signInText(style='color: red; position: absolute; left:13px') SIGN IN
    p.signInText(style='color: black; position: absolute; left:13px') SIGN IN
  .myAccount(onclick='AccountOn()')
    p.myAccountText(style='color: cyan; position: absolute; left:8px') MY ACCOUNT
    p.myAccountText(style='color: red; position: absolute; left:8px') MY ACCOUNT
    p.myAccountText(style='color: black; position: absolute; left:6px') MY ACCOUNT
    .AccountArrow
    .AccountBar(onmouseleave='AccountOff(this)')
      .AccountProfileButton(onclick='GoToProfile()')
        p(style='position: absolute; top: 10px; left: 45px; margin:0') Profile
      .AccountSettingsButton(onclick="parent.location='http://localhost:3000/AccountSettings'")
        p(style='position: absolute; top:10px; left:8px;margin:0') Account Settings
      .SignOutButton(onclick='SignOut()')
        p(style='position: absolute; top:10px; left:40px; margin:0') Sign Out
  .BelowHeaderBar
#MenuPage(onmouseleave='MenuOff(this)')
  ul
    h2 Movies
    li Trending Movies
    li Browse Movies by Genre
    li Top Rated Movies
    li Most Popular
  ul
    h2 Celebs
    li Most Popular Celebs
    li A-Z List
.Buttons
  #ReviewsButton(onclick='showReviews()') R E V I E W S
  #FollowingButton(onclick='showFollowing()') F O L L O W I N G
  #WatchListButton(onclick='showWatchlist()') W A T C H L I S T
#AccountBlock
  #AccountImage
    img(src='/html/Images/mads-mikkelsen.jpg' style='width:200px; height:200px; border-radius: 50%;')
  #AccountName #{id.Uname}
  #UserTitle #{id.userType}
  p#FlagUser &#x2690;
  p#AccountHeart(onclick='changeHeartColour(this)') &#x2661;
#Block
  #AccountReviews
    #AccountReviewsBar
      p#ReviewTitle #{id.Uname}&apos;S REVIEWS
      p#numOfReviews 20
    #AccountReviewsBlock
      each rev in review
        #ReviewBar
          a#ReviewMovie(href='http://localhost:3000/movies/'+rev.Movie)=rev.Movie
          span#ReviewLine
          p#ReviewRating #{rev.rating}/10
          #ReviewParagraphBar
            p#ReviewParagraph #{rev.paragraph}
  #AccountFollowing
    #FollowingBar
      p#FollowUsersButton  P E O P L E
      p#FollowPeopleButton  U S E R S
    span#FollowLine
    #FollowUsers
      #User
        img#UserImage(src='/html/Images/mgg.jpg')
        a#UserName(href='MMDB_Account.html') Booya20000
        p#UserHeart(onclick='changeHeartColour(this)') &#x2661;
      #User
        img#UserImage(src='/html/Images/mgg.jpg')
        a#UserName(href='MMDB_Account.html') Jackieneeeh
        p#UserHeart(onclick='changeHeartColour(this)') &#x2661;
    #FollowPeople
      #Person
        a#PersonName(href='MMDB_actor.html') Matthew Gray Gubler
        p#PeopleHeart(onclick='changeHeartColour(this)') &#x2661;
  #AccountWatchlist
    #WatchlistHeader
      p#WatchlistHeaderText W A T C H L I S T
    #WatchlistMoviesBlock
      #MovieBar
        a#MovieTitle penguins of madamada
        p#MovieHeart(onclick='changeHeartColour(this)') &#x2661;
      #MovieBar
        a#MovieTitle adamada
        p#MovieHeart(onclick='changeHeartColour(this)') &#x2661;
script(src='/html/JAVASCRIPT/Client.js')
script(src='/html/JAVASCRIPT/Account.js')
